<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" android:state_pressed="false">
        <shape >
            <corners android:radius="@dimen/dp_15" />
            <solid android:color="@color/bg_color"/>
            <gradient android:angle="0" android:endColor="@color/light_theme" android:startColor="@color/dark_theme" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape >
            <corners android:radius="@dimen/dp_15" />
            <solid android:color="@color/bg_color"/>
            <gradient android:angle="0" android:endColor="@color/light_theme_l" android:startColor="@color/dark_theme_l" />
        </shape>
    </item>
</selector>